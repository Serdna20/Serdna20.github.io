---
interface Props {
	title: string;
	// inputType: type;
    placeholderText: string;
    inputId: string;
}

const { title, placeholderText, inputId } = Astro.props;
---

<div class="flex flex-col justify-center items-center gap-1">
    <h1 class="text-white">{title}</h1>
    <input type="number" id={inputId} placeholder={placeholderText} class="w-40 outline-none appearance-none px-2 py-1">
</div>